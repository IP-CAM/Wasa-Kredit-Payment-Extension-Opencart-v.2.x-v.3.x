{{ header }}{{ column_left }}
<div id="content" data-oc-template="payment_wasa_leasing">
    <div class="page-header">
        <div class="container-fluid">
            <div class="float-end">
                <button type="submit" form="form-payment" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
                    <i class="fa-solid fa-save"></i>
                </button>
                <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light">
                    <i class="fa-solid fa-reply"></i>
                </a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ol class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li class="breadcrumb-item">
                        <a href="{{ breadcrumb.href }}">
                            {{ breadcrumb.text }}
                        </a>
                    </li>
                {% endfor %}
            </ol>
        </div>
    </div>
    <div class="container-fluid">
        <div class="card">
            <div class="d-flex card-header">
                <div class="flex-grow-1">
                    <i class="fa-solid fa-pencil"></i>
                    {{ text_edit }}
                </div>
                <div class="flex-shrink-1">
                    {% if payment_wasa_leasing_status == 0 %}
                        <span class="badge rounded-pill bg-secondary">{{ text_is_disabled }}</span>
                    {% elseif payment_wasa_leasing_test_mode %}
                        <span class="badge rounded-pill bg-success">{{ text_in_test_mode }}</span>
                    {% else %}
                        <span class="badge rounded-pill bg-danger">{{ text_in_live_mode }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="card-body">
                <form id="form-payment" action="{{ save }}" method="post" data-oc-toggle="ajax">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a href="#tab-general" data-bs-toggle="tab" class="nav-link active">
                                {{ tab_general }}
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#tab-test-mode" data-bs-toggle="tab" class="nav-link">
                                {{ tab_test_mode }}
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#tab-about" data-bs-toggle="tab" class="nav-link">
                                {{ tab_about }}
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div id="tab-general" class="tab-pane active">
                            <div class="row mb-3">
                                <label for="input-client-id" class="col-sm-2 col-form-label">
                                    {{ entry_client_id }}
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control"
                                        name="payment_wasa_leasing_client_id"
                                        value="{{ payment_wasa_leasing_client_id }}"
                                        placeholder="{{ entry_client_id }}"
                                        id="input-client-id" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="input-secret-key" class="col-sm-2 col-form-label">
                                    {{ entry_secret_key }}
                                </label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control"
                                        name="payment_wasa_leasing_secret_key"
                                        value="{{ payment_wasa_leasing_secret_key }}"
                                        placeholder="{{ entry_secret_key }}"
                                        id="input-secret-key" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="input-default-order-status" class="col-sm-2 col-form-label">
                                    {{ entry_default_order_status }}
                                </label>
                                <div class="col-sm-10">
                                    <select name="payment_wasa_leasing_default_order_status_id" id="input-default-order-status" class="form-select">
                                        {% for order_status in order_statuses %}
                                            <option value="{{ order_status.order_status_id }}" {% if order_status.order_status_id == payment_wasa_leasing_default_order_status_id %}selected="selected"{% endif %}>
                                                {{ order_status.name }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">
                                    {{ entry_complete_order_status }}
                                </label>
                                <div class="col-sm-10">
                                    <div id="complete-order-status" class="form-control" style="height: 150px; overflow: auto;">
                                        {% for order_status in order_statuses %}
                                            <div class="form-check">
                                                <input type="checkbox" name="payment_wasa_leasing_complete_order_status[]" value="{{ order_status.order_status_id }}" id="complete-order-status-{{ order_status.order_status_id }}" class="form-check-input" {% if order_status.order_status_id in payment_wasa_leasing_complete_order_status %}checked{% endif %}/>
                                                <label for="complete-order-status-{{ order_status.order_status_id }}" class="form-check-label">
                                                    {{ order_status.name }}
                                                </label>
                                            </div>
                                        {% endfor %}
                                    </div>
                                    <div class="form-text">{{ help_complete_order_status }}</div>
                                    <div id="error-complete-order-status" class="invalid-feedback"></div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">
                                    {{ entry_cancel_order_status }}
                                </label>
                                <div class="col-sm-10">
                                    <div id="input-cancel-order-status" class="form-control" style="height: 150px; overflow: auto;">
                                        {% for order_status in order_statuses %}
                                            <div class="form-check">
                                                <input type="checkbox" name="payment_wasa_leasing_cancel_order_status[]" value="{{ order_status.order_status_id }}" id="input-cancel-order-status-{{ order_status.order_status_id }}" class="form-check-input"{% if order_status.order_status_id in payment_wasa_leasing_cancel_order_status %} checked{% endif %}/>
                                                <label for="input-cancel-order-status-{{ order_status.order_status_id }}" class="form-check-label">
                                                    {{ order_status.name }}
                                                </label>
                                            </div>
                                        {% endfor %}
                                    </div>
                                    <div class="form-text">{{ help_cancel_order_status }}</div>
                                    <div id="error-cancel-order-status" class="invalid-feedback"></div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="input-geo-zone" class="col-sm-2 col-form-label">
                                    {{ entry_geo_zone }}
                                </label>
                                <div class="col-sm-10">
                                    <select name="payment_wasa_leasing_geo_zone_id" id="input-geo-zone" class="form-select">
                                        <option value="0">
                                            {{ text_all_zones }}
                                        </option>
                                        {% for geo_zone in geo_zones %}
                                            <option value="{{ geo_zone.geo_zone_id }}" {% if geo_zone.geo_zone_id == payment_wasa_leasing_geo_zone_id %}selected="selected"{% endif %}>
                                                {{ geo_zone.name }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="input-sort-order" class="col-sm-2 col-form-label">
                                    {{ entry_sort_order }}
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control"
                                        name="payment_wasa_leasing_sort_order"
                                        value="{{ payment_wasa_leasing_sort_order }}"
                                        placeholder="{{ entry_sort_order }}"
                                        id="input-sort-order" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="input-status" class="col-sm-2 col-form-label">
                                    {{ entry_status }}
                                </label>
                                <div class="col-sm-10">
                                    <div class="form-check form-switch form-switch-lg">
                                        <input type="hidden" name="payment_wasa_leasing_status" value="0"/>
                                        <input type="checkbox" name="payment_wasa_leasing_status" value="1" id="input-status" class="form-check-input" {% if payment_wasa_leasing_status %}checked{% endif %}/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="tab-test-mode" class="tab-pane">
                            <div class="row mb-3">
                                <label for="input-test-mode-client-id" class="col-sm-2 col-form-label">
                                    {{ entry_client_id }}
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control"
                                        name="payment_wasa_leasing_test_mode_client_id"
                                        value="{{ payment_wasa_leasing_test_mode_client_id }}"
                                        placeholder="{{ entry_client_id }}"
                                        id="input-test-mode-client-id" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="input-test-mode-secret-key" class="col-sm-2 col-form-label">
                                    {{ entry_secret_key }}
                                </label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control"
                                        name="payment_wasa_leasing_test_mode_secret_key"
                                        value="{{ payment_wasa_leasing_test_mode_secret_key }}"
                                        placeholder="{{ entry_secret_key }}"
                                        id="input-test-mode-secret-key" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="input-test-mode" class="col-sm-2 col-form-label">
                                    {{ entry_test_mode }}
                                </label>
                                <div class="col-sm-10">
                                    <div class="form-check form-switch form-switch-lg">
                                        <input type="hidden" name="payment_wasa_leasing_test_mode" value="0"/>
                                        <input type="checkbox" name="payment_wasa_leasing_test_mode" value="1" id="test-mode" class="form-check-input" {% if payment_wasa_leasing_test_mode %}checked{% endif %}/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="tab-about" class="tab-pane">
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">
                                    {{ entry_current_version }}
                                </label>
                                <div class="col-sm-10 pt-2">
                                    {% if current_version %}
                                        v{{ current_version }}
                                        {% if (latest_version) and (latest_version > current_version) %}
                                            <em>(update is avaliable)</em>
                                        {% endif %}
                                    {% else %}
                                        -
                                    {% endif %}
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">
                                    {{ entry_latest_version }}
                                </label>
                                <div class="col-sm-10 pt-2">
                                    {% if latest_version %}
                                        v{{ latest_version }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">
                                    {{ entry_opencart_version }}
                                </label>
                                <div class="col-sm-10 pt-2">
                                    {% if opencart_version %}
                                        v{{ opencart_version }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">
                                    {{ entry_support }}
                                </label>
                                <div class="col-sm-10 pt-2">
                                    {{ text_support }}
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}
